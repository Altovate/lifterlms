{
	"build": {
		"custom": [ "js:additional", "js:builder", "readme" ]
	},
	"dist": {
		"title": "LifterLMS"
	},
	"pot": {
		"bugReport": "https://github.com/gocodebox/lifterlms/issues",
		"domain": "lifterlms",
		"dest": "languages/",
		"jsClassname": "LLMS_L10n_JS",
		"jsFilename": "class.llms.l10n.js.php",
		"jsSince": "3.17.8",
		"jsSrc": [ "assets/js/**/*.js", "!assets/js/**/*.min.js", "!assets/js/**/*.js.map" ],
		"lastTranslator": "Thomas Patrick Levy <help@lifterlms.com>",
		"team": "LifterLMS <help@lifterlms.com>",
		"package": "lifterlms"
	},
	"scripts": {
		"src": [
			"assets/js/**/*.js",
			"!assets/js/**/*.min.js",
			"!assets/js/**/*.js.map",
			"!assets/js/app/**/*.js",
			"!assets/js/builder/**/*.js",
			"!assets/js/partials/**/*.js",
			"!assets/js/private/**/*.js"
		],
		"dest": "assets/js/"
	},
	"versioner": {
		"custom": [ "versioner:readme" ],
	},
	"watch": {
		"custom": [ {
			"glob": [ "assets/js/builder/**/*.js" ],
			"tasks": [ "js:builder" ]
		} ]
	},
	"zip": {
		"composer": true,
		"src": {
			"custom": [ "!./**/CHANGELOG.md", "!./**/README.md", "!./_private/**", "!./_readme/**" ]
		}
	}
}
